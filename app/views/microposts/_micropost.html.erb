<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost_size),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "app.views.microposts.microposts.post" %>
    <span class="timeago" title="<%= micropost.created_at.getutc.iso8601 %>">
      <%= micropost.created_at.to_s %>
    </span>
    <%= t "app.views.microposts.microposts.ago" %>
    <% if micropost.user.current_user? current_user %>
      <%= link_to t("app.views.microposts.microposts.delete"),
        micropost, method: :delete,
        data: {confirm: t("app.views.microposts.microposts.you_sure")} %>
    <% end %>
  </span>
</li>
