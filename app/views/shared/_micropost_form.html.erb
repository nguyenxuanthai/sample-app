<%= form_for micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content,
      placeholder: t("app.views.shared.microposts.new_micropost") %>
  </div>
  <%= f.submit t("app.views.shared.microposts.post"),
    class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.picture_type %>
  </span>
<% end %>
