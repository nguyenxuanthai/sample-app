<% provide :title, t("app.views.users.edit.title") %>
<h1><%= t "app.views.users.edit.update_your_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("app.views.users.edit.change"), "http://gravatar.com/emails",
        target: "_blank" %>
    </div>
  </div>
</div>
